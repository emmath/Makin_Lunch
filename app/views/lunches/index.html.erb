<h1>It's Lunch time!</h1>
<h2>Add some veggies:</h2>
<%= link_to "New Vegetable", :foods %>
<h2>Add a new dish</h2>
<%= link_to "New Dish", :meals %>
<br>
<br>
<h2>Lunches you have made!</h2>
<table>
  <tr>
    <th>Occasion</th>
    <th>Food</th>
    <th>Meal</th>
    <th>Date</th>
    <th>Food</th>
    <th>Meal</th>
    <th></th>
  </tr>

<% @lunches.each do |lunch| %>
  <tr>
    <td><%= lunch.occasion %></td>
    <td><%= lunch.food_id %></td>
    <td><%= lunch.meal_id %></td>
    <td><%= lunch.date %></td>
    <td><%= link_to 'Show', lunch %></td>
    <td><%= link_to 'Edit', edit_lunch_path(lunch) %></td>
    <td><%= link_to 'Destroy', lunch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Lunch', new_lunch_path %>
